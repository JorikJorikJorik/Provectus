  <color name="popup_overlay.background">@color/colorPrimary</color>
  <color name="popup_overlay.text_color_primary">@color/white</color>
  <color name="popup_overlay.text_color_secondary">@color/white</color>
  <color name="popup_overlay.action_menu_text_color">@color/white</color>

  <!-- dialog title -->

  <color name="dialog_title.text_view.text">@color/black</color>

  <!-- dialog button -->

  <color name="dialog_button.text">@color/green.main</color>

  <!-- gray button selector -->

  <color name="gray_button_selector.focus">@color/white</color>

  <!-- gray button pressed selector -->

  <color name="gray_button_pressed_selector">@color/gray.light2</color>

  <!-- gray button ripple -->

  <color name="gray_button_ripple">@color/gray.light2</color>

  <!-- state error -->

  <color name="state_error.view.pressed">@color/green.dark</color>
  <color name="state_error.view.unpressed">@color/green.main</color>

  <!-- state progress -->

  <color name="state_progress.progress_bar">@color/green.main</color>

  <!-- swipe_refresh_layout_main_color -->

  <color name="swipe_refresh_layout.scheme_colors.main">@color/green.main</color>

