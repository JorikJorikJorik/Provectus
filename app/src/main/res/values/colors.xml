  <color name="item_info_user.text_view.main_data.text">@color/black</color>
  <color name="item_info_user.text_view.secondary_data.text">@color/gray.dark</color>

  <!-- user short info -->

  <color name="user_short_info.text_view.name_user.text">@color/black</color>

