<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- color -->

  <color name="colorPrimary">#7cb342</color>
  <color name="colorPrimaryDark">#4b830d</color>
  <color name="colorAccent">#ffeb3b</color>

  <!-- main color -->

  <color name="green.light">#aee571</color>
  <color name="green.main">#7cb342</color>
  <color name="green.dark">#4b830d</color>

  <color name="yellow.light">#ffff72</color>
  <color name="yellow.main">#ffeb3b</color>
  <color name="yellow.dark">#c8b900</color>

  <color name="red.light">#ff7961</color>
  <color name="red.main">#f44336</color>
  <color name="red.dark">#ba000d</color>

  <color name="blue.light">#67daff</color>
  <color name="blue.main">#03a9f4</color>
  <color name="blue.dark">#007ac1</color>

  <color name="gray.light2">#e0e0e0</color>
